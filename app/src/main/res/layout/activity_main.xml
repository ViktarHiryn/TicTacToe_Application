<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tableLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tic Tac Toe Game"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold|italic" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:id="@+id/imgButton1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="imageButtonTapped"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/xo" />

        <ImageButton
            android:id="@+id/imgButton2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="imageButtonTapped"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/xo" />

        <ImageButton
            android:id="@+id/imgButton3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="imageButtonTapped"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/xo" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:id="@+id/imgButton4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="imageButtonTapped"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/xo" />

        <ImageButton
            android:id="@+id/imgButton5"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="imageButtonTapped"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/xo" />

        <ImageButton
            android:id="@+id/imgButton6"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="imageButtonTapped"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/xo" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:id="@+id/imgButton7"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="imageButtonTapped"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/xo" />

        <ImageButton
            android:id="@+id/imgButton8"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="imageButtonTapped"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/xo" />

        <ImageButton
            android:id="@+id/imgButton9"
